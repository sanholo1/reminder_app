# ============================================
# REMINDER APP - ENVIRONMENT VARIABLES EXAMPLE
# ============================================
# Copy this file to .env and fill in your values
# DO NOT commit .env file to version control!

# ============================================
# DATABASE CONFIGURATION (Required)
# ============================================
DB_HOST=localhost
DB_PORT=3306
DB_USERNAME=app_user
DB_PASSWORD=your_secure_password_here
DB_DATABASE=reminder_app

# ============================================
# APPLICATION CONFIGURATION (Optional)
# ============================================
# Port on which the backend server will run
PORT=3001

# Environment mode (development, production, test)
NODE_ENV=development

# ============================================
# AUTHENTICATION CONFIGURATION (Required)
# ============================================
# JWT secret key - MUST be at least 32 characters for security
# Generate a secure random string for production
JWT_SECRET=your_super_secure_jwt_secret_key_at_least_32_characters

# Admin user credentials - change these for production!
ADMIN_USER=your_admin_username
ADMIN_PASSWORD=your_secure_admin_password_min_8_chars

# ============================================
# EXTERNAL SERVICES (Required)
# ============================================
# OpenAI API key for LLM parsing service
# Get your API key from: https://platform.openai.com/account/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# ============================================
# LOGGING CONFIGURATION (Optional)
# ============================================
# Directory where log files will be stored
LOG_DIR=logs

# Log file name pattern (optional)
# If not set, will use format: app-YYYY-MM-DD.log
# LOG_FILE=custom-app.log

# Enable/disable file logging (default: true)
# Set to 'false' to disable file logging
# LOG_TO_FILE=true

# ============================================
# SECURITY NOTES
# ============================================
# 1. Always use strong passwords for production
# 2. JWT_SECRET should be a cryptographically secure random string
# 3. Never commit actual .env file to version control
# 4. Use environment-specific values for each deployment
# 5. Consider using a key management service for production secrets